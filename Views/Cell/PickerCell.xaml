<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BigBreakers.PickerCell" x:Name="cell">
	<ViewCell.View>
		<StackLayout Orientation="Horizontal" BindingContext="{x:Reference cell}">
                <Image Source="{Binding Image}" Margin="8"/>
                <Label Text="{Binding Label}" TextColor="#DC1837" FontAttributes="Bold" VerticalOptions="Center" />
				<Picker SelectedIndexChanged="OnPickerSelectedIndexChanged" x:Name="picker" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0, 0, 8, 0" Title="Coucou"></Picker>
             </StackLayout>
	</ViewCell.View>
</ViewCell>
